{
  "dashboard": {
    "id": null,
    "title": "Zaptec Health Monitoring",
    "tags": ["zaptec", "health"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Health Check Status",
        "type": "stat",
        "targets": [
          {
            "expr": "count by (status) (last_over_time({service=\"zaptec-health-check\"}[1h]))",
            "legendFormat": "{{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Recent Health Check Results",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=\"zaptec-health-check\"} |= \"Health check\""
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Application Errors (Last 24h)",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"zaptec-app\"} |= \"ERROR\""
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Health Check Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "count_over_time({service=\"zaptec-health-check\", status=\"healthy\"}[1h])",
            "legendFormat": "Healthy"
          },
          {
            "expr": "count_over_time({service=\"zaptec-health-check\", status=\"unhealthy\"}[1h])",
            "legendFormat": "Unhealthy"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "5m"
  }
}