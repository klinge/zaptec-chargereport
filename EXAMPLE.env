# Environment variables needed
#
# Update where needed and rename this file to .env
#
# NOTE: Remember to add .env to .gitignore to avoid pushing your secrets

# Environment can be  DEV or PROD
ENV=DEV
# Set log level
LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR, CRITICAL
# SSL verification - set to false for DEV environments with proxy issues (Zscaler, etc.)
SSL_VERIFY=false
#Controls if emails are sent (auto-disabled in DEV, auto-enabled in PROD)
SEND_EMAILS=0

# Zaptec settings
ZAPTEC_USERNAME=your_username
ZAPTEC_PASSWORD=your_password
ZAPTEC_INSTALLATION_ID=your_installation_id

#General report settings
CHARGING_TARIFF="your tariff"
REPORT_FILE="your filename"
DATA_DIR="path to folder that holds report files and logs"

# DEV SMTP settings (use Mailtrap for example)
DEV_SMTP_SERVER="sandbox.smtp.mailtrap.io"
DEV_SMTP_PORT="465"
DEV_SMTP_USERNAME="your_mailtrap_username"
DEV_SMTP_PASSWORD="your_mailtrap_password"
DEV_SMTP_FROM_EMAIL="test@example.com"

# PROD SMTP settings
PROD_SMTP_SERVER="smtp.example.com"
PROD_SMTP_PORT="587"
PROD_SMTP_USERNAME="your_prod_username"
PROD_SMTP_PASSWORD="your_prod_password"
PROD_SMTP_FROM_EMAIL="your_prod_email"

# Fallback SMTP settings (used if environment-specific not found)
SMTP_TIMEOUT="15"

# Email recipient settings
INVOICING_RECIPIENTS="comma separated list of email addresses"
SUMMARY_RECIPIENTS="comma separated list of email addresses"
ERROR_RECIPIENTS="comma separated list of email addresses that should recieve emails if report generation fails"